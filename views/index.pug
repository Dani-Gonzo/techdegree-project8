extends layout

block content
    head
        title= title
        link(href="/stylesheets/style.css", rel="stylesheet")

    body
        h1 Books
        p
            a.button(href="new_book.html") Create New Book
        table
            thead
                tr
                    th Title
                    th Author
                    th Genre
                    th Year
            tbody
                each val in books
                    tr
                        td
                            a(href="book_detail.html")= val.title
                        td= val.author
                        td= val.genre
                        td= val.year