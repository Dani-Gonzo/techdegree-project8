extends layout

block content

    body
        h1= book.title
        form(action="")
            p= `Title: ${book.title}`
            p= `Author: ${book.author}`
            p= `Genre: ${book.genre}`
            p= `Year: ${book.year}`
            p
                a.button(href=`/books/${book.id}/edit`) Update Book
            p
                a.button(href=`/books/${book.id}/delete`) Delete Book
            p    
                a.button(href="/") Cancel