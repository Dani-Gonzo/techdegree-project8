extends layout

block content

    body
        h1 New Book
        if errors
            ol
                each val in errors
                    li= val.message
        form(method="POST")
            p 
                label(for="title") Title:
                input(type="text" name="title" id="title" placeholder="Title" value=book.title)
            p 
                label(for="author") Author:
                input(type="text" name="author" id="author" placeholder="Author" value=book.author)
            p 
                label(for="genre") Genre:
                input(type="text" name="genre" id="genre" placeholder="Genre" value=book.genre)
            p 
                label(for="year") Year:
                input(type="text" name="year" id="year" placeholder="Year" value=book.year)
            p
                input(type="submit" value="Create New Book")
            p
                a.button(href="/") Cancel